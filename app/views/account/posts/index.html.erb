<div class="col-md-12">

  <h2 class="text-center"> 我發表過的評論 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> 編號 </th>
        <th> 評論內容 </th>
        <th> 評論的文章主題 </th>
        <th> 評論的文章內容 </th>
        <th> 評論時間 </th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.id %> </td>
          <td> <%= render_post_content(post) %> </td>
          <td> <%= post.group.title %> </td>
          <td> <%= post.group.description %> </td>
          <td> <%= post.updated_at.to_s(:short) %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
